{
    "id": "adRewards",
    "name": "Ad Rewards",
    "blocks": [
        {
            "opcode": "showAd",
            "blockType": "command",
            "text": "Afficher une publicité avec ID [AD_ID]",
            "arguments": {
                "AD_ID": {
                    "type": "string",
                    "defaultValue": "ca-app-pub-xxxxxxxxxxxxxxxx"
                }
            }
        },
        {
            "opcode": "onAdSuccess",
            "blockType": "hat",
            "text": "Quand la pub est terminée"
        },
        {
            "opcode": "onAdFail",
            "blockType": "hat",
            "text": "Quand la pub échoue"
        }
    ]
}
